{
  "name": "@cotep/role-and-task",
  "version": "1.0.7",
  "description": "Start multiple node.js processes along with specific tasks for an easy scale",
  "main": "./lib/src/Library.js",
  "scripts": {
    "build": "grunt default",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags",
    "prepare": "npm run build",
    "testSimple": "(npm run build && cd ./lib && node test/testSimple/main.js --mode master 2> node-error.log && cat node-error.log) || cat ./lib/node-error.log",
    "cleanProcess": "ps aux | grep -oEi '([0-9].+?node.+(src|test)/(main|systemBoot|testSimple).+)|([0-9].+?node.+node_modules.+?mocha.+)' | awk '{print $1}' | xargs kill -9"
  },
  "keywords": [
    "architecture",
    "zeroMQ",
    "scale",
    "node.js",
    "process"
  ],
  "author": "COTEP",
  "contributors": [
    {
      "name": "Gregory Neut <g.neut@cotep.com>"
    },
    {
      "name": "Alrick Emilien <a.emilien@cotep.com>"
    }
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/COTEP-DEV/role-and-task.git"
  },
  "license": {
    "type": "MIT",
    "url": "https://opensource.org/licenses/MIT"
  },
  "homepage": "https://github.com/COTEP-DEV/role-and-task#readme",
  "dependencies": {
    "@cotep/errors": "^1.0.7",
    "@babel/runtime": "^7.4.4",
    "chai": "^4.1.2",
    "colors": "^1.3.2",
    "command-line-args": "^5.0.1",
    "fs": "0.0.2",
    "hjson": "2.3.0",
    "mocha": "^5.0.0",
    "moment": "^2.20.1",
    "path": "^0.12.7",
    "pidusage": "^2.0.17",
    "zeromq": "^5.1.0"
  },
  "devDependencies": {
    "@babel/plugin-proposal-private-methods": "^7.4.4",
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.4",
    "@babel/plugin-transform-async-to-generator": "^7.4.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.4.4",
    "@babel/plugin-transform-runtime": "^7.4.4",
    "@babel/preset-env": "^7.4.4",
    "babel-eslint": "^10.0.1",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.13.0",
    "grunt": "^1.0.4",
    "grunt-babel": "^8.0.0",
    "grunt-cli": "^1.3.2",
    "grunt-contrib-symlink": "^1.0.0",
    "grunt-newer": "^1.3.0",
    "load-grunt-tasks": "^3.5.2"
  },
  "directories": {
    "test": "test"
  },
  "engines": {
    "node": ">=9.0.0"
  },
  "os": [
    "linux"
  ]
}
